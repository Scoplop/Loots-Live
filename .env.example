# Configuration de l'application Loots&Live
# Copier ce fichier vers .env et ajuster les valeurs

# Application
APP_NAME=LootsAndLive
APP_VERSION=1.0.0
DEBUG=True
HOST=127.0.0.1
PORT=8000

# Base de données
DATABASE_URL=sqlite+aiosqlite:///./data/lootsandlive.db

# Sécurité
SECRET_KEY=CHANGE_ME_IN_PRODUCTION_USE_RANDOM_STRING_HERE_MINIMUM_32_CHARS
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24
BCRYPT_ROUNDS=12

# Rate Limiting
RATE_LIMIT_LOGIN_ATTEMPTS=5
RATE_LIMIT_LOGIN_WINDOW_MINUTES=10

# Ollama IA
OLLAMA_ENDPOINT=http://localhost:11434/api/generate
OLLAMA_MODEL=qwen2.5:14b
OLLAMA_TIMEOUT=30
OLLAMA_MAX_CONCURRENT=3
OLLAMA_FALLBACK_ENABLED=True

# Background Workers
WORKER_MISSION_CHECK_INTERVAL=5
WORKER_PRODUCTION_INTERVAL=1
WORKER_HEALING_INTERVAL=30
WORKER_EVENT_CHECK_INTERVAL=21600

# Logs
LOG_LEVEL=INFO
LOG_FILE=logs/app.log
LOG_MAX_BYTES=10485760
LOG_BACKUP_COUNT=5

# Frontend
CORS_ORIGINS=["http://localhost:8000", "http://127.0.0.1:8000"]

# Optimisations
CACHE_ENABLED=False
CACHE_TTL=300
